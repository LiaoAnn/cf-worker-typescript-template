{
  "name": "cf-worker-typescript-template",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "shutdownAction": "stopCompose",
  "features": {
    "ghcr.io/devcontainers-extra/features/cloudflare-wrangler:1": {
      "version": "latest"
    }
  },
  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "streetsidesoftware.code-spell-checker",
        "GitHub.copilot",
        "oderwat.indent-rainbow",
        "bradlc.vscode-tailwindcss",
        "wayou.vscode-todo-highlight",
        "biomejs.biome"
      ],
      "settings": {
        "editor.bracketPairColorization.enabled": true,
        "editor.guides.bracketPairs": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.formatOnPaste": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "editor.codeActionsOnSave": {
          "source.fixAll": "explicit"
        },
        "js/ts.format.insertSpaceBeforeFunctionParenthesis": true,
        "js/ts.format.placeOpenBraceOnNewLineForControlBlocks": false,
        "js/ts.format.placeOpenBraceOnNewLineForFunctions": false,
        "js/ts.suggest.autoImports": true,
        "js/ts.preferences.importModuleSpecifier": "non-relative",
        "workbench.editor.enablePreview": true,
      }
    }
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    8787
  ],
  // Fix pnpm store permissions after volume mount (Docker named volume may be root-owned) and then pin pnpm store path.
  "postCreateCommand": "sudo mkdir -p /home/node/.pnpm-store && sudo chown -R node:node /home/node/.pnpm-store && pnpm config set store-dir /home/node/.pnpm-store",
  // Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
  "remoteUser": "node"
}